<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@../css/home.css" xmlns:fx="http://javafx.com/fxml/1" 
             xmlns="http://javafx.com/javafx/24.0.1" 
             fx:controller="com.example.smartbudget.controller.HomeController">

    <!-- Top Navigation Bar -->
    <top>
        <HBox spacing="15" styleClass="navbar">
            <children>
                <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" 
                       text="💰 Smart Budget Assistant" />
                <Region HBox.hgrow="ALWAYS" />
                <Button styleClass="navbar-button" text="Home" fx:id="btnHome"/>
                <Button styleClass="navbar-button" text="Reports" fx:id="btnReports"/>
                <Button styleClass="navbar-button" text="Profile" fx:id="btnProfile"/>
                <Button styleClass="navbar-button" text="Logout" fx:id="btnLogout"/>
            </children>
        </HBox>
    </top>

    <!-- Sidebar -->
    <left>
        <VBox spacing="10" styleClass="sidebar">
            <children>
                <Button styleClass="sidebar-button" text="🏠 Dashboard" fx:id="btnDashboard"/>
                <Button styleClass="sidebar-button" text="➕ Add Expense" fx:id="btnAddExpense"/>
                <Button styleClass="sidebar-button" text="📊 View Report" fx:id="btnViewReport"/>
                <Button styleClass="sidebar-button" text="🎯 Budget Goals" fx:id="btnBudgetGoals"/>
                <Button styleClass="sidebar-button" text="⚙️ Settings" fx:id="btnSettings"/>
            </children>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" styleClass="main-content">
            <children>
                <Label styleClass="heading" text="Welcome back, User!" />

                <HBox spacing="20">
                    <children>
                        <VBox styleClass="card" VBox.vgrow="ALWAYS">
                            <children>
                                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" 
                                       text="💵 Total Balance" />
                                <Label style="-fx-font-size: 24px; -fx-text-fill: #27ae60;" 
                                       text="₹12,450" />
                            </children>
                        </VBox>

                        <VBox styleClass="card" VBox.vgrow="ALWAYS">
                            <children>
                                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" 
                                       text="📉 Monthly Expenses" />
                                <Label style="-fx-font-size: 24px; -fx-text-fill: #c0392b;" 
                                       text="₹7,800" />
                            </children>
                        </VBox>

                        <VBox styleClass="card" VBox.vgrow="ALWAYS">
                            <children>
                                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" 
                                       text="🎯 Savings Goal" />
                                <Label style="-fx-font-size: 24px; -fx-text-fill: #2980b9;" 
                                       text="₹20,000" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>

</BorderPane>

