<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.smartbudget.LoginController"
            prefWidth="400.0" prefHeight="300.0">

    <children>
        <VBox alignment="CENTER" spacing="15.0" layoutX="50.0" layoutY="50.0" prefWidth="300">
            <children>
                <Label text="Smart Budget Assistant" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                
                <TextField fx:id="usernameField" promptText="Username" prefWidth="200"/>
                
                <PasswordField fx:id="passwordField" promptText="Password" prefWidth="200"/>
                
                <Button fx:id="loginButton" text="Login" onAction="#handleLogin" prefWidth="200"/>
                
                <Label fx:id="errorLabel" textFill="red"/>
            </children>
        </VBox>
    </children>
</AnchorPane>


